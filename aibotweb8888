#!/usr/bin/env python3
import ccxt
import time
import numpy as np
import pandas as pd
from rich.console import Console
from rich.table import Table
from rich.panel import Panel
from rich.live import Live
from sklearn.linear_model import SGDRegressor
from sklearn.preprocessing import StandardScaler
import subprocess
import os
import random
import traceback

console = Console()

# ============================
# CONFIG
# ============================
SYMBOL = "ATOM/USDT"
BASE = "ATOM"
QUOTE = "USDT"
MIN_QTY = 0.001
MAX_POSITIONS = 10
FEE_RATE = 0.001
UPDATE_INTERVAL = 1
MODEL_WINDOW = 50
CONF_THRESHOLD = 0.2
MAX_CONFIDENCE = 1
HTML_DASHBOARD_FILE = "/var/www/html/dashboard.html"
SOFT_STOP_LOSS = -0.05
ULTRA_FAST_WINDOW = 5
TRAILING_MULTIPLIER = 1.5
WALLET_RISK_BASE = 0.35
SIM_PNL_WEIGHT = 0.3
MAX_SIM_POSITIONS = 20
MICRO_PROFIT_TARGET = 0.001  # 0.1% ultra-fast scalping

# ============================
# EXCHANGE INIT
# ============================
exchange = ccxt.hitbtc({"enableRateLimit": True})

# ============================
# STATE
# ============================
open_positions = []
background_sim_positions = []
profit_history = []
pred_history = []
model = SGDRegressor(max_iter=1, tol=None, learning_rate="invscaling", eta0=0.01, warm_start=True)
model_initialized = False
scaler_X = StandardScaler()
scaler_y = StandardScaler()
wallet_learning = {"signal_history": [], "adjustment_factor": 1.0, "wallet_history": []}
current_direction = None
starting_wallet = None
tick_history = []

# ============================
# DATA FUNCTIONS
# ============================
def get_ohlcv():
    try:
        data = exchange.fetch_ohlcv(SYMBOL, timeframe="1m", limit=MODEL_WINDOW)
        df = pd.DataFrame(data, columns=["time","open","high","low","close","volume"])
        return df
    except Exception as e:
        console.print(f"[red]OHLCV Error: {e}[/red]")
        return None

def get_tick_data():
    try:
        orderbook = exchange.fetch_order_book(SYMBOL)
        bid = orderbook['bids'][0][0] if orderbook['bids'] else 0
        ask = orderbook['asks'][0][0] if orderbook['asks'] else 0
        mid = (bid + ask)/2 if bid and ask else None
        return bid, ask, mid
    except Exception as e:
        console.print(f"[red]Tick data error: {e}[/red]")
        return None, None, None

def get_wallet_balance():
    try:
        if not os.path.exists("/wallet.sh"): return 0
        result = subprocess.run(["bash", "/wallet.sh"], capture_output=True, text=True)
        return float(result.stdout.strip())
    except:
        return 0

def get_coin_real_info_safe():
    """Only call coinrealinfo.sh if open positions exist"""
    if not open_positions:
        return None
    try:
        if not os.path.exists("/coinrealinfo.sh"): return None
        result = subprocess.run(["bash", "/coinrealinfo.sh", BASE+QUOTE+"_PERP"], capture_output=True, text=True)
        lines = result.stdout.strip().split("\n")
        entry = qty = pnl = None
        for line in lines:
            if line.startswith("Quantity:"): qty=float(line.split(":")[1].strip())
            elif line.startswith("Entry Price:"): entry=float(line.split(":")[1].strip())
            elif line.startswith("PnL:"): pnl=float(line.split(":")[1].strip())
        if entry is not None and qty is not None and pnl is not None:
            return {"entry": entry, "qty": qty, "pnl": pnl}
        return None
    except:
        return None

# ============================
# MODEL FUNCTIONS
# ============================
def train_model_incremental(df):
    global model_initialized
    try:
        df['mid'] = (df['high'] + df['low'])/2
        X = np.arange(len(df)).reshape(-1,1)
        y = df['mid'].values.reshape(-1,1)
        if not model_initialized:
            X_scaled = scaler_X.fit_transform(X)
            y_scaled = scaler_y.fit_transform(y).ravel()
            model.partial_fit(X_scaled, y_scaled)
            model_initialized = True
        else:
            X_scaled = scaler_X.transform(X[-5:])
            y_scaled = scaler_y.transform(y[-5:]).ravel()
            model.partial_fit(X_scaled, y_scaled)
    except:
        console.print(f"[red]Model training error[/red]")

def predict_pnl_direction(df):
    try:
        if not model_initialized: return 0,0
        bid, ask, mid = get_tick_data()
        if mid is None: return 0,0
        X_future = np.array([[len(df)]])
        X_scaled = scaler_X.transform(X_future)
        pred_scaled = model.predict(X_scaled)[0]
        pred = scaler_y.inverse_transform([[pred_scaled]])[0][0]

        # simulation effect for smoothing only
        sim_effect = 0
        for pos in background_sim_positions:
            if pos['realized_pnl'] is not None:
                sim_effect += pos['realized_pnl']
            else:
                sim_effect += (mid - pos['entry']) if pos['side']=='buy' else (pos['entry'] - mid)
        if background_sim_positions: sim_effect /= len(background_sim_positions)

        pred += sim_effect
        pred = max(min(pred, mid*0.01), -mid*0.01)
        confidence = min(MAX_CONFIDENCE, max(0.01, abs(pred)/(mid*0.01)))
        pred_history.append(pred)
        if len(pred_history) > 3: pred_history.pop(0)
        smoothed_change = sum(pred_history)/len(pred_history)
        return smoothed_change, confidence
    except:
        return 0,0

# ============================
# ULTRA-FAST SIGNALS
# ============================
def get_ultra_fast_signal():
    if len(tick_history) < 3: return "hold"
    delta = tick_history[-1] - tick_history[-3]
    deltas = [tick_history[i+1]-tick_history[i] for i in range(len(tick_history)-1)]
    avg_delta = sum(deltas[-3:])/min(3,len(deltas))
    if avg_delta > 0: return "buy"
    if avg_delta < 0: return "sell"
    return "hold"

def get_orderbook_signal(orderbook):
    try:
        bid_vol = sum([b[1] for b in orderbook['bids'][:5]])
        ask_vol = sum([a[1] for a in orderbook['asks'][:5]])
        if bid_vol > ask_vol * 1.2: return "buy"
        elif ask_vol > bid_vol * 1.2: return "sell"
        return "hold"
    except:
        return "hold"

# ============================
# ORDER FUNCTIONS
# ============================
def execute_real_order_realistic(side, qty, price=None, slippage=0.0005):
    """Execute order with realistic fill effects and slippage"""
    inverted_side = 'sell' if side=='buy' else 'buy'
    qty_str = f"{round(qty,6):.6f}"
    effective_price = price or (get_tick_data()[1] if side=='buy' else get_tick_data()[0])
    if effective_price is None: return False, 0
    if side == 'buy':
        effective_price *= 1 + slippage
    else:
        effective_price *= 1 - slippage
    try:
        if not os.path.exists("/placeorder.sh"): return False, effective_price
        result = subprocess.run(["bash", "/placeorder.sh", BASE, qty_str, inverted_side], capture_output=True, text=True)
        out = result.stdout.strip()
        success = "SUCCESS" in out.upper()
        return success, effective_price
    except:
        return False, effective_price

def calc_order_qty(wallet, price, predicted_profit=0):
    adjustment = wallet_learning.get("adjustment_factor", 1.0)
    use_usdt = wallet * WALLET_RISK_BASE * adjustment
    multiplier = min(TRAILING_MULTIPLIER, 1 + predicted_profit*5)
    qty = use_usdt / price * multiplier
    return max(MIN_QTY, np.floor(qty*1000000)/1000000)

def add_position(side, qty, entry_price):
    coin_info = get_coin_real_info_safe()
    if coin_info:
        entry_price = coin_info['entry']
        qty = coin_info['qty']
    if len(open_positions) < MAX_POSITIONS:
        open_positions.append({
            "side": side,
            "qty": qty,
            "entry": entry_price,
            "time": time.time(),
            "realized_pnl": 0,
            "trailing_stop": None
        })

# ============================
# REALISTIC PNL FUNCTIONS
# ============================
def update_realistic_pnl():
    """Update PnL with slippage and trailing stop, using coinrealinfo.sh only when positions exist"""
    coin_info = get_coin_real_info_safe()
    bid, ask, mid = get_tick_data()
    if mid is None: return

    for pos in open_positions:
        qty = pos['qty']
        entry = pos['entry']

        if coin_info and abs(coin_info['qty'] - qty) < 0.0001:
            entry = coin_info['entry']
            qty = coin_info['qty']

        if pos['side']=='buy':
            effective_price = bid*(1+0.0005)
            pos['realized_pnl'] = (bid - entry) * qty - qty*FEE_RATE*bid
        else:
            effective_price = ask*(1-0.0005)
            pos['realized_pnl'] = (entry - ask) * qty - qty*FEE_RATE*ask

        if pos['trailing_stop'] is None:
            pos['trailing_stop'] = mid*(0.99 if pos['side']=='buy' else 1.01)
        else:
            if pos['side']=='buy':
                pos['trailing_stop'] = max(pos['trailing_stop'], mid*(1-0.005))
            else:
                pos['trailing_stop'] = min(pos['trailing_stop'], mid*(1+0.005))

        pos['qty'] = qty
        pos['entry'] = entry

def close_positions_if_profitable():
    global open_positions, profit_history
    keep=[]; cycle_pnl=0
    update_realistic_pnl()
    bid, ask, mid = get_tick_data()
    if mid is None: return
    wallet = get_wallet_balance()
    for pos in open_positions:
        pnl = pos.get('realized_pnl',0)
        exit_side = 'sell' if pos['side']=='buy' else 'buy'
        micro_target = pos['entry']*(1+MICRO_PROFIT_TARGET if pos['side']=='buy' else 1-MICRO_PROFIT_TARGET)
        close_cond = (pos['side']=='buy' and mid >= micro_target) or (pos['side']=='sell' and mid <= micro_target)
        if (pos['side']=='buy' and mid < pos['trailing_stop']) or (pos['side']=='sell' and mid > pos['trailing_stop']):
            close_cond = True
        if close_cond:
            success, _ = execute_real_order_realistic(exit_side, pos['qty'])
            if success:
                cycle_pnl += pnl
                wallet_learning["signal_history"].append((pos['side'], pnl, 1.0))
        else:
            keep.append(pos)
    open_positions = keep
    profit_history.append(cycle_pnl)
    global starting_wallet
    if starting_wallet is None: starting_wallet=wallet
    wallet_learning['wallet_history'].append(wallet)
    if len(wallet_learning['wallet_history'])>5: wallet_learning['wallet_history'].pop(0)
    smoothed_wallet = sum(wallet_learning['wallet_history'])/len(wallet_learning['wallet_history'])
    wallet_delta = smoothed_wallet - starting_wallet
    history = wallet_learning["signal_history"][-5:]
    trade_pnl = sum(p for s,p,c in history)
    unrealized_pnl = sum(pos.get('realized_pnl',0) for pos in open_positions)
    graded_pnl = grade_positions_with_simulation()
    factor = 1 + (trade_pnl + graded_pnl)/(starting_wallet if starting_wallet else 1)
    if wallet_delta<0: factor *= max(0.6, 1 - abs(wallet_delta)/(starting_wallet if starting_wallet else 1))
    wallet_learning['adjustment_factor'] = max(0.5, min(2.0, factor))

# ============================
# BACKGROUND SIMULATION
# ============================
def simulate_realistic_background(mid_price, n_sim=3):
    """Simulate positions for ML smoothing without touching real PnL"""
    global background_sim_positions
    for _ in range(n_sim):
        side = random.choice(['buy','sell'])
        entry = mid_price*(1 + random.uniform(-0.0005,0.0005))
        background_sim_positions.append({"side": side, "entry": entry, "realized_pnl": None})
    if len(background_sim_positions) > MAX_SIM_POSITIONS:
        background_sim_positions = background_sim_positions[-MAX_SIM_POSITIONS:]
    background_sim_positions = [p for p in background_sim_positions if p.get('realized_pnl') is None]

def grade_positions_with_simulation():
    """Returns graded PnL with simulation effect for adaptive sizing"""
    bid, ask, mid = get_tick_data()
    if mid is None: return 0
    graded_pnl = sum(pos.get('realized_pnl',0) for pos in open_positions)
    sim_effect = 0
    for pos in background_sim_positions:
        if pos['realized_pnl'] is not None:
            sim_effect += pos['realized_pnl']
        else:
            sim_effect += (mid - pos['entry']) if pos['side']=='buy' else (pos['entry'] - mid)
    if background_sim_positions:
        sim_effect /= len(background_sim_positions)
    graded_pnl += SIM_PNL_WEIGHT * sim_effect
    return graded_pnl

# ============================
# DASHBOARD
# ============================
def render_dashboard(signal, pred, conf, bid, ask, mid, wallet, wallet_delta, wallet_delta_percent):
    try:
        positions_html = "".join([f"<div class='card'><h3>Pos {i+1} {p['side'].upper()}</h3><p>Qty:{p['qty']:.6f}</p><p>Entry:{p['entry']:.6f}</p><p>PnL:<span style='color:{'green' if p['realized_pnl']>0 else 'red'}'>{p['realized_pnl']:.8f}</span></p></div>" for i,p in enumerate(open_positions)])
        sims_html = f"<p>Background Simulations: {len(background_sim_positions)}</p>"
        wallet_color="green" if wallet_delta>0 else "red" if wallet_delta<0 else "grey"
        wallet_sign="+" if wallet_delta>0 else "-" if wallet_delta<0 else ""
        pred_text = f"↑ {pred:.8f}" if pred>0 else f"↓ {pred:.8f}" if pred<0 else f"→ {pred:.8f}"
        graded_pnl = grade_positions_with_simulation()
        metrics_html=f"<div class='metrics'><div class='card'><h3>Signal</h3><p>{signal}</p></div><div class='card'><h3>Prediction</h3><p>{pred_text}</p></div><div class='card'><h3>Confidence</h3><p>{conf:.2f}</p></div><div class='card'><h3>Bid</h3><p>{bid:.8f}</p></div><div class='card'><h3>Ask</h3><p>{ask:.8f}</p></div><div class='card'><h3>Mid</h3><p>{mid:.8f}</p></div><div class='card'><h3>Wallet</h3><p style='color:{wallet_color};'>{wallet:.8f} ({wallet_sign}{abs(wallet_delta):.8f}, {wallet_sign}{abs(wallet_delta_percent):.2f}%)</p></div><div class='card'><h3>Graded PnL</h3><p>{graded_pnl:.8f}</p></div><div class='card'><h3>Open Positions</h3><p>{len(open_positions)}</p></div></div>"
        profit_html="<div class='card'><h3>Profit History</h3><ul>"+ "".join([f"<li style='color:{'green' if pnl>=0 else 'red'}'>Cycle {len(profit_history)-10+i+1}: {pnl:.8f}</li>" for i,pnl in enumerate(profit_history[-10:])]) + "</ul></div>"
        html_content=f"<html><head><meta charset='utf-8'><meta http-equiv='refresh' content='1'><style>body{{font-family:Roboto;background:#f5f5f5}}.metrics{{display:flex;flex-wrap:wrap;}}.card{{background:#fff;border-radius:8px;padding:15px;margin:10px;min-width:150px;box-shadow:0 4px 6px rgba(0,0,0,0.1);}} ul{{padding-left:20px}}</style></head><body><h1>ATOM Bot Dashboard</h1>{metrics_html}{profit_html}<div class='positions'>{positions_html}</div><div class='footer' style='text-align:center;margin:20px'>{sims_html}</div></body></html>"
        with open(HTML_DASHBOARD_FILE,"w") as f: f.write(html_content)
        table = Table(title="ATOM Bot")
        table.add_column("Metric"); table.add_column("Value")
        table.add_row("Signal",signal); table.add_row("Prediction Δ",f"{pred:.8f}"); table.add_row("Confidence",f"{conf:.2f}")
        table.add_row("Bid",f"{bid:.8f}"); table.add_row("Ask",f"{ask:.8f}"); table.add_row("Mid",f"{mid:.8f}")
        table.add_row("Wallet",f"{wallet:.8f} ({wallet_sign}{abs(wallet_delta):.8f}, {wallet_sign}{abs(wallet_delta_percent):.2f}%)")
        table.add_row("Graded PnL", f"{graded_pnl:.8f}")
        table.add_row("Open Positions",str(len(open_positions)))
        for idx, pos in enumerate(open_positions): table.add_row(f"Pos{idx+1} {pos['side']}", f"Qty={pos['qty']:.6f} Entry={pos['entry']:.6f} PnL={pos.get('realized_pnl',0):.8f}")
        for idx, pnl in enumerate(profit_history[-10:]): table.add_row(f"Profit Cycle {len(profit_history)-10+idx+1}", f"{pnl:.8f}")
        return Panel(table, title="Status")
    except:
        return Panel("[red]Dashboard Error[/red]")

# ============================
# CLOSE POSITIONS AT START
# ============================
def close_opposite_positions():
    try:
        if os.path.exists("/closepositions.sh"):
            subprocess.run(["bash","/closepositions.sh"])
    except Exception as e:
        console.print(f"[red]Failed to close positions at start: {e}[/red]")

# ============================
# MAIN LOOP
# ============================
def main():
    global tick_history, starting_wallet, current_direction
    console.print("[green]Starting ATOM/USDT advanced bot (ultra-fast futures scalping)...[/green]")
    close_opposite_positions()
    with Live(refresh_per_second=4) as live:
        while True:
            try:
                df = get_ohlcv()
                if df is None or len(df) < MODEL_WINDOW:
                    time.sleep(1)
                    continue
                train_model_incremental(df)

                tick_bid, tick_ask, tick_mid = get_tick_data()
                if tick_mid: tick_history.append(tick_mid)
                if len(tick_history) > ULTRA_FAST_WINDOW: tick_history = tick_history[-ULTRA_FAST_WINDOW:]

                pred, conf = predict_pnl_direction(df)
                ultra_signal = get_ultra_fast_signal()
                orderbook_signal = get_orderbook_signal(exchange.fetch_order_book(SYMBOL))
                signal = ultra_signal if ultra_signal in ['buy','sell'] else orderbook_signal
                if signal not in ['buy','sell']: signal = 'hold'

                wallet = get_wallet_balance()
                if starting_wallet is None: starting_wallet = wallet

                if signal in ['buy','sell'] and conf > CONF_THRESHOLD:
                    if current_direction != signal:
                        current_direction = signal
                    entry_price = tick_ask if signal=='buy' else tick_bid
                    qty = calc_order_qty(wallet, entry_price, abs(pred)/tick_mid)
                    add_position(signal, qty, entry_price)

                simulate_realistic_background(tick_mid or df['close'].iloc[-1])
                close_positions_if_profitable()

                wallet_delta = wallet - starting_wallet
                wallet_delta_percent = (wallet_delta / starting_wallet * 100) if starting_wallet else 0
                panel = render_dashboard(signal, pred, conf, tick_bid or 0, tick_ask or 0, tick_mid or 0, wallet, wallet_delta, wallet_delta_percent)
                live.update(panel)
                time.sleep(UPDATE_INTERVAL)
            except Exception as e:
                console.print(f"[red]Main loop error: {e}[/red]")
                console.print(traceback.format_exc())
                time.sleep(1)

if __name__ == "__main__":
    main()




















































