#!/usr/bin/env python3
import ccxt
import time
import numpy as np
import pandas as pd
from rich.console import Console
from rich.table import Table
from rich.panel import Panel
from rich.live import Live
from sklearn.linear_model import SGDRegressor
import subprocess
import traceback
import os
import random

console = Console()

# ============================
# CONFIG
# ============================
SYMBOL = "ATOM/USDT"
BASE = "ATOM"
QUOTE = "USDT"
MIN_QTY = 0.001
MAX_POSITIONS = 10
FEE_RATE = 0.001
WALLET_RISK = 0.35
UPDATE_INTERVAL = 1
MODEL_WINDOW = 50
CONF_THRESHOLD = 0.2   # lower threshold for faster signals
MAX_CONFIDENCE = 1
HTML_DASHBOARD_FILE = "/var/www/html/dashboard.html"
SMOOTH_WINDOW = 2      # reduce smoothing to react faster
SIM_PNL_WEIGHT = 0.3
MAX_ORDER_MULTIPLIER = 1.5
SOFT_STOP_LOSS = -0.05

# ============================
# EXCHANGE INIT
# ============================
exchange = ccxt.hitbtc({"enableRateLimit": True})

# ============================
# STATE
# ============================
open_positions = []
background_sim_positions = []
profit_history = []
pred_history = []
model = SGDRegressor(max_iter=1, tol=None, learning_rate="invscaling", eta0=0.01, warm_start=True)
model_initialized = False
prev_wallet = None
starting_wallet = None

wallet_learning = {
    "signal_history": [],
    "adjustment_factor": 1.0,
    "wallet_history": []
}

# ============================
# DATA FUNCTIONS
# ============================
def get_ohlcv():
    try:
        data = exchange.fetch_ohlcv(SYMBOL, timeframe="1m", limit=MODEL_WINDOW)
        df = pd.DataFrame(data, columns=["time","open","high","low","close","volume"])
        return df
    except Exception as e:
        console.print(f"[red]OHLCV Error: {e}[/red]")
        return None

def get_wallet_balance():
    try:
        if not os.path.exists("/wallet.sh"):
            console.print("[red]ERROR: wallet.sh not found[/red]")
            return 0
        result = subprocess.run(["bash", "/wallet.sh"], capture_output=True, text=True)
        return float(result.stdout.strip())
    except Exception as e:
        console.print(f"[red]Wallet fetch error: {e}[/red]")
        return 0

def get_coin_real_info():
    try:
        if not os.path.exists("/coinrealinfo.sh"):
            return None
        result = subprocess.run(["bash", "/coinrealinfo.sh", BASE+QUOTE+"_PERP"], capture_output=True, text=True)
        lines = result.stdout.strip().split("\n")
        entry = qty = pnl = None
        for line in lines:
            if line.startswith("Quantity:"):
                try: qty = float(line.split(":")[1].strip())
                except: qty = None
            elif line.startswith("Entry Price:"):
                try: entry = float(line.split(":")[1].strip())
                except: entry = None
            elif line.startswith("PnL:"):
                try: pnl = float(line.split(":")[1].strip())
                except: pnl = None
        if entry is not None and qty is not None and pnl is not None:
            return {"entry": entry, "qty": qty, "pnl": pnl}
        return None
    except Exception as e:
        console.print(f"[red]Coin info fetch error: {e}[/red]")
        return None

def get_bid_ask_mid():
    try:
        ticker = exchange.fetch_ticker(SYMBOL)
        bid = ticker.get('bid',0)
        ask = ticker.get('ask',0)
        if bid==0 or ask==0: return None,None,None
        if bid == ask: ask += 0.0001
        mid = (bid + ask)/2
        return bid, ask, mid
    except Exception as e:
        console.print(f"[red]Bid/Ask fetch error: {e}[/red]")
        return None,None,None

# ============================
# MODEL & SIGNAL FUNCTIONS
# ============================
def train_model_incremental(df):
    global model_initialized
    try:
        df['mid'] = (df['high'] + df['low'])/2
        X = np.arange(len(df)).reshape(-1,1)
        y = df['mid'].values
        if not model_initialized:
            model.partial_fit(X, y)
            model_initialized = True
        else:
            model.partial_fit(X[-5:], y[-5:])
    except Exception as e:
        console.print(f"[red]Model training error: {e}[/red]")

def predict_pnl_direction(df):
    try:
        if not model_initialized: return 0,0
        bid, ask, mid = get_bid_ask_mid()
        if mid is None: return 0,0
        current = mid
        X_future = np.array([[len(df)]])
        pred = model.predict(X_future)[0]
        change = pred - current

        sim_effect = 0
        for pos in background_sim_positions:
            pnl_val = pos.get("realized_pnl")
            if pnl_val is not None:
                sim_effect += pnl_val
            else:
                sim_effect += (mid - pos['entry']) if pos['side']=='buy' else (pos['entry'] - mid)
        if background_sim_positions:
            sim_effect /= len(background_sim_positions)
        change += sim_effect

        change = max(min(change, mid*0.01), -mid*0.01)
        confidence = min(MAX_CONFIDENCE, max(0.01, abs(change)/(current*0.01)))
        pred_history.append(change)
        if len(pred_history) > SMOOTH_WINDOW:
            pred_history.pop(0)
        smoothed_change = sum(pred_history)/len(pred_history)
        return smoothed_change, confidence
    except Exception as e:
        console.print(f"[red]Prediction error: {e}[/red]")
        return 0,0

# ----------------------------
# FAST SIGNAL
# ----------------------------
def get_signal(df):
    try:
        typical = (df['high'] + df['low'] + df['close'])/3
        sma = typical.rolling(10).mean()  # faster window
        mad = typical.rolling(10).apply(lambda x: np.mean(np.abs(x - np.mean(x))), raw=True)
        cci = (typical - sma)/(0.015 * mad)
        last_cci = cci.iloc[-1]

        # very short term momentum
        recent_change = df['close'].iloc[-1] - df['close'].iloc[-3]

        if last_cci > 50 and recent_change > 0:
            return "buy"
        elif last_cci < -50 and recent_change < 0:
            return "sell"
        return "hold"
    except Exception as e:
        console.print(f"[red]Signal error: {e}[/red]")
        return "hold"

# ============================
# ORDER FUNCTIONS
# ============================
def execute_real_order(side, qty):
    qty_str = f"{round(qty,6):.6f}"
    try:
        if not os.path.exists("/placeorder.sh"):
            console.print("[red]ERROR: placeorder.sh not found[/red]")
            return False
        result = subprocess.run(["bash", "/placeorder.sh", BASE, qty_str, side], capture_output=True, text=True)
        out = result.stdout.strip()
        if "SUCCESS" in out.upper():
            return True
        console.print(f"[red]Order ERROR: {out}[/red]")
        return False
    except Exception as e:
        console.print(f"[red]Execution error: {e}[/red]")
        return False

def calc_order_qty(wallet, price, predicted_profit=0):
    adjustment = wallet_learning.get("adjustment_factor", 1.0)
    use_usdt = wallet * WALLET_RISK * adjustment
    multiplier = min(MAX_ORDER_MULTIPLIER, 1 + predicted_profit*5)
    qty = use_usdt / price * multiplier
    qty = max(MIN_QTY, np.floor(qty*1000000)/1000000)
    return qty

def add_position(side, qty, entry_price):
    if len(open_positions) < MAX_POSITIONS:
        open_positions.append({"side": side, "qty": qty, "entry": entry_price, "time": time.time(), "realized_pnl": 0})

# ============================
# REAL UNREALIZED PNL UPDATE
# ============================
def update_real_pnl():
    coin_info = get_coin_real_info()
    bid, ask, mid = get_bid_ask_mid()
    if mid is None: return
    for pos in open_positions:
        qty = pos['qty']
        entry = pos['entry']
        if coin_info and abs(coin_info['qty'] - qty) < 0.0001:
            entry = coin_info['entry']
            qty = coin_info['qty']
        if pos['side']=='buy':
            pos['realized_pnl'] = (mid - entry) * qty - qty*FEE_RATE*mid
        else:
            pos['realized_pnl'] = (entry - mid) * qty - qty*FEE_RATE*mid
        pos['qty'] = qty
        pos['entry'] = entry

# ============================
# CLOSE POSITIONS PROFIT-AWARE
# ============================
def close_positions_if_profitable():
    global open_positions, profit_history
    keep=[]
    cycle_pnl=0
    update_real_pnl()
    bid, ask, mid = get_bid_ask_mid()
    if mid is None: return
    wallet = get_wallet_balance()
    for pos in open_positions:
        pnl = pos.get('realized_pnl',0)
        exit_side = 'sell' if pos['side']=='buy' else 'buy'
        effective_pnl_ratio = (pnl - pos['qty']*FEE_RATE*mid) / (pos['entry']*pos['qty'])
        if pnl - pos['qty']*FEE_RATE*mid > 0 or effective_pnl_ratio < SOFT_STOP_LOSS:
            if execute_real_order(exit_side, pos['qty']):
                console.print(f"[green]Closed {exit_side} qty={pos['qty']} pnl={pnl:.8f}[/green]")
                cycle_pnl += pnl
                wallet_learning["signal_history"].append((pos['side'], pnl, 1.0))
        else:
            keep.append(pos)
    open_positions = keep
    profit_history.append(cycle_pnl)

    global starting_wallet
    if starting_wallet is None:
        starting_wallet = wallet
    wallet_learning['wallet_history'].append(wallet)
    if len(wallet_learning['wallet_history']) > 5:
        wallet_learning['wallet_history'].pop(0)
    smoothed_wallet = sum(wallet_learning['wallet_history'])/len(wallet_learning['wallet_history'])
    wallet_delta = smoothed_wallet - starting_wallet

    history = wallet_learning["signal_history"][-5:]
    trade_pnl = sum(p for s,p,c in history)
    real_unrealized_pnl = sum(pos.get('realized_pnl',0) for pos in open_positions)
    factor = 1 + (trade_pnl + SIM_PNL_WEIGHT*real_unrealized_pnl) / (starting_wallet if starting_wallet else 1)
    if wallet_delta < 0:
        factor *= max(0.6, 1 - abs(wallet_delta)/(starting_wallet if starting_wallet else 1))
    factor = max(0.5, min(2.0, factor))
    wallet_learning['adjustment_factor'] = factor

# ============================
# BACKGROUND SIMULATION
# ============================
def simulate_background(signal, mid, n_trades=3):
    global background_sim_positions
    for _ in range(n_trades):
        sim_side = signal if signal in ['buy','sell'] else random.choice(['buy','sell'])
        background_sim_positions.append({"side": sim_side, "entry": mid, "realized_pnl": None})
    background_sim_positions = [
        p for p in background_sim_positions
        if p.get('realized_pnl') is None or (mid - p['entry'] if p['side']=='buy' else p['entry'] - mid) <= 0
    ]

# ============================
# DASHBOARD
# ============================
def render_dashboard(signal, pred, conf, bid, ask, mid, wallet, wallet_delta, wallet_delta_percent):
    try:
        positions_html = ""
        for idx, pos in enumerate(open_positions):
            pnl = pos.get('realized_pnl', 0)
            pnl_color = "green" if pnl > 0 else "red" if pnl < 0 else "black"
            positions_html += f"""
            <div class=\"card\">
                <h3>Position {idx+1} ({pos['side'].upper()})</h3>
                <p>Qty: {pos['qty']:.6f}</p>
                <p>Entry: {pos['entry']:.6f}</p>
                <p>PnL: <span style=\"color:{pnl_color};\">{pnl:.8f}</span></p>
            </div>
            """
        sims_html = f"<p>Background Simulations: {len(background_sim_positions)}</p>"
        wallet_color = "green" if wallet_delta > 0 else "red" if wallet_delta < 0 else "grey"
        wallet_sign = "+" if wallet_delta > 0 else "-" if wallet_delta < 0 else ""
        if pred > 0:
            pred_text = f"Price expected to rise ↑ ({pred:.8f})"
        elif pred < 0:
            pred_text = f"Price expected to fall ↓ ({pred:.8f})"
        else:
            pred_text = f"No significant change → ({pred:.8f})"
        metrics_html = f"""
        <div class=\"metrics\">
            <div class=\"card\"><h3>Signal</h3><p>{signal}</p></div>
            <div class=\"card\"><h3>Prediction</h3><p>{pred_text}</p></div>
            <div class=\"card\"><h3>Confidence</h3><p>{conf:.2f}</p></div>
            <div class=\"card\"><h3>Bid</h3><p>{bid:.8f}</p></div>
            <div class=\"card\"><h3>Ask</h3><p>{ask:.8f}</p></div>
            <div class=\"card\"><h3>Mid Price</h3><p>{mid:.8f}</p></div>
            <div class=\"card\"><h3>Wallet (USDT)</h3>
                <p style=\"color:{wallet_color};\">
                    {wallet:.8f} ({wallet_sign}{abs(wallet_delta):.8f}, {wallet_sign}{abs(wallet_delta_percent):.2f}%)
                </p>
            </div>
            <div class=\"card\"><h3>Open Positions</h3><p>{len(open_positions)}</p></div>
        </div>
        """
        profit_html = "<div class='card'><h3>Profit History</h3><ul>"
        for idx, pnl in enumerate(profit_history[-10:]):
            color = "green" if pnl >= 0 else "red"
            profit_html += f"<li style='color:{color};'>Cycle {len(profit_history)-10+idx+1}: {pnl:.8f}</li>"
        profit_html += "</ul></div>"
        html_content = f"""
        <html>
        <head>
            <meta charset=\"utf-8\">
            <meta http-equiv="refresh" content="1">
            <link href=\"https://fonts.googleapis.com/icon?family=Material+Icons\" rel=\"stylesheet\">
            <link href=\"https://fonts.googleapis.com/css?family=Roboto:400,500,700\" rel=\"stylesheet\">
            <style>
                body {{ font-family: 'Roboto', sans-serif; background: #f5f5f5; margin:0; padding:0; }}
                h1 {{ text-align:center; color:#3f51b5; margin-top:20px; }}
                .metrics {{ display:flex; flex-wrap:wrap; justify-content:center; margin:20px; }}
                .card {{ background:#fff; border-radius:8px; padding:15px; margin:10px; min-width:150px; box-shadow:0 4px 6px rgba(0,0,0,0.1); }}
                .positions {{ display:flex; flex-wrap:wrap; justify-content:center; margin:20px; }}
                .positions .card {{ min-width:200px; }}
                ul {{ padding-left:20px; }}
                p {{ margin:5px 0; font-size:14px; }}
            </style>
        </head>
        <body>
            <h1>ATOM Trading Bot Dashboard</h1>
            {metrics_html}
            {profit_html}
            <div class=\"positions\">
                {positions_html}
            </div>
            <div class=\"footer\" style=\"text-align:center; margin:20px;\">{sims_html}</div>
        </body>
        </html>
        """
        with open(HTML_DASHBOARD_FILE, "w") as f:
            f.write(html_content)

        table = Table(title="ATOM Trading Bot Dashboard")
        table.add_column("Metric")
        table.add_column("Value")
        table.add_row("Signal", signal)
        table.add_row("Prediction Δ", f"{pred:.8f}")
        table.add_row("Confidence", f"{conf:.2f}")
        table.add_row("Bid", f"{bid:.8f}")
        table.add_row("Ask", f"{ask:.8f}")
        table.add_row("Mid Price", f"{mid:.8f}")
        table.add_row("Wallet (USDT)", f"{wallet:.8f} ({wallet_sign}{abs(wallet_delta):.8f}, {wallet_sign}{abs(wallet_delta_percent):.2f}%)")
        table.add_row("Open Positions", str(len(open_positions)))
        for idx, pos in enumerate(open_positions):
            table.add_row(f"Pos{idx+1} {pos['side']}", f"Qty={pos['qty']:.6f} Entry={pos['entry']:.6f} PnL={pos.get('realized_pnl',0):.8f}")
        for idx, pnl in enumerate(profit_history[-10:]):
            table.add_row(f"Profit Cycle {len(profit_history)-10+idx+1}", f"{pnl:.8f}")
        return Panel(table, title="Status")
    except Exception as e:
        console.print(f"[red]Dashboard render error: {e}[/red]")
        return Panel("[red]Dashboard Error[/red]")

# ============================
# MAIN LOOP
# ============================
def main():
    global prev_wallet, starting_wallet
    console.print("[green]Starting ATOM/USDT bot...[/green]")
    try:
        if os.path.exists("/closepositions.sh"):
            subprocess.run(["bash","/closepositions.sh"], check=True)
    except: pass
    with Live(refresh_per_second=4) as live:
        while True:
            try:
                df = get_ohlcv()
                if df is None or len(df)<MODEL_WINDOW: time.sleep(1); continue
                train_model_incremental(df)
                signal = get_signal(df)
                bid, ask, mid = get_bid_ask_mid()
                if None in [bid, ask, mid]:
                    console.print("[yellow]Bid/Ask not available, skipping this cycle[/yellow]")
                    time.sleep(1)
                    continue
                wallet = get_wallet_balance()
                if starting_wallet is None:
                    starting_wallet = wallet
                pred, conf = predict_pnl_direction(df)

                if abs(pred) < mid*0.0005 or conf < 0.2:
                    signal = "hold"

                if signal in ['buy','sell'] and conf>CONF_THRESHOLD:
                    entry_price = bid if signal=='buy' else ask
                    qty = calc_order_qty(wallet, entry_price, pred/mid)
                    if qty>=MIN_QTY and execute_real_order(signal, qty):
                        add_position(signal, qty, entry_price)

                simulate_background(signal, mid)
                close_positions_if_profitable()  # already updates PnL

                wallet_delta = wallet - starting_wallet
                wallet_delta_percent = (wallet_delta / starting_wallet * 100) if starting_wallet else 0
                panel = render_dashboard(signal, pred, conf, bid, ask, mid, wallet, wallet_delta, wallet_delta_percent)
                live.update(panel)
                prev_wallet = wallet
                time.sleep(UPDATE_INTERVAL)

            except KeyboardInterrupt:
                console.print("[yellow]Stopped by user[/yellow]")
                break
            except Exception as e:
                console.print(f"[red]Error loop: {e}[/red]")
                console.print(traceback.format_exc())
                time.sleep(1)

if __name__ == "__main__":
    main()


















































